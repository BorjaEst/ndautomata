{
	"name": "Python 3",
	"build": { "dockerfile": "Dockerfile" },
	"features": {
		"ghcr.io/devcontainers/features/common-utils:1": {},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/rocker-org/devcontainer-features/pandoc:1": {},
		"ghcr.io/devcontainers-contrib/features/tox:1": {}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip3 install --user -r requirements-test.txt",

	// Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode",

	// Enable GPU passthrough. More info: https://github.com/devcontainers/features/tree/main/src/nvidia-cuda 
	"runArgs": ["--gpus", "all"],	

	// Add here the customization such development extensions
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"ms-toolsai.jupyter",
				"ms-python.isort"
			]
		}
	}
}
